#!/usr/local/bin/b4p
      // Function 'literal' adds thousand separators to make numbers readable
      echo( literal( file size( system info[bin directory] + "\b4p.exe" ), "#,000", local ) );   // Finds a file in Windows
      echo( literal( file size( system info[bin directory] + "/b4p" ),     "#,000", local ) );   // Finds a file in Linux/MacOS
      echo( file size( "Non-existing File.txt" ) ); // -1
